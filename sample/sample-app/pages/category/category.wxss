.page {
  background-color: #F5F5F5;
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 搜索栏 */
.search-bar {
  background-color: #FF6B35;
  padding: 20rpx 24rpx;
  flex-shrink: 0;
}

.search-input {
  background-color: #fff;
  border-radius: 32rpx;
  padding: 16rpx 24rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.search-placeholder {
  font-size: 26rpx;
  color: #999;
  margin-left: 12rpx;
}

/* 主体内容 - 左右布局 */
.main-content {
  display: flex;
  flex-direction: row;
  flex: 1;
  overflow: hidden;
}

/* 左侧分类导航 - 固定宽度，需要固定高度才能滚动 */
.category-nav {
  width: 180rpx;
  min-width: 180rpx;
  max-width: 180rpx;
  height: 450px;
  background-color: #F5F5F5;
}

.category-item {
  height: 120px;
  padding: 0 16rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-color: #F5F5F5;
}

.category-item text {
  font-size: 26rpx;
  color: #666;
}

.category-item.active {
  background-color: #fff;
}

.category-item.active text {
  color: #FF6B35;
  font-weight: bold;
}

.category-badge {
  background-color: #FF6B35;
  color: #fff;
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  border-radius: 16rpx;
  margin-left: 8rpx;
}

/* 右侧商品列表 - 占满剩余空间 */
.product-list {
  flex: 1;
  background-color: #fff;
  overflow-y: scroll; /* Allow vertical scrolling */
}

.category-title {
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.category-title text {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

/* 商品项 - 横向布局 */
.product-item {
  display: flex;
  flex-direction: row;
  padding: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.product-image {
  width: 140rpx;
  height: 140rpx;
  min-width: 140rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.product-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.product-desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.product-bottom {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-top: 16rpx;
}

.product-price {
  font-size: 32rpx;
  color: #FF6B35;
  font-weight: bold;
}

/* 数量控制 - 横向布局 */
.quantity-control {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.minus-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  background-color: #fff;
  border: 1rpx solid #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
}

.minus-btn text {
  font-size: 32rpx;
  color: #666;
}

.plus-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  background-color: #FF6B35;
  display: flex;
  align-items: center;
  justify-content: center;
}

.plus-btn text {
  font-size: 32rpx;
  color: #fff;
}

.quantity {
  font-size: 28rpx;
  color: #333;
  min-width: 48rpx;
  text-align: center;
}

/* 底部购物车栏 */
.cart-bar {
  height: 100rpx;
  background-color: #2D2D2D;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 24rpx;
  z-index: 101; /* Ensure it is above the mask */
}

.cart-left {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.cart-icon-wrap {
  width: 80rpx;
  height: 80rpx;
  background-color: #3D3D3D;
  border-radius: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.cart-badge-icon {
  background-color: #FF6B35;
  color: #fff;
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 12rpx;
  margin-left: -16rpx;
  margin-top: -32rpx;
}

.cart-info {
  margin-left: 16rpx;
  display: flex;
  flex-direction: column;
}

.cart-total {
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
}

.cart-tip {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

.cart-right {
  width: 200rpx;
  height: 72rpx;
  background-color: #535353;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cart-right text {
  font-size: 28rpx;
  color: #999;
}

.cart-right.active {
  background-color: #52C41A;
}

.cart-right.active text {
  color: #fff;
}

/* 购物车弹窗遮罩 */
.cart-popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 99;
}

/* 购物车弹窗 */
.cart-popup {
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 600rpx;
  z-index: 100;
}

.cart-popup-header {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.cart-popup-title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.cart-clear {
  padding: 8rpx 16rpx;
}

.cart-clear text {
  font-size: 26rpx;
  color: #999;
}

.cart-popup-list {
  max-height: 500rpx;
}

.cart-popup-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.cart-item-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.cart-item-price {
  font-size: 28rpx;
  color: #FF6B35;
  font-weight: bold;
  margin-right: 24rpx;
}
