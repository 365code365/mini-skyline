/* 全局样式 */
page {
  background-color: #F5F5F5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

/* 通用类 */
.container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding-bottom: 20rpx;
}

.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.btn-primary {
  background-color: #FF6B35;
  color: #fff;
  border: none;
}

.btn-secondary {
  background-color: #fff;
  color: #FF6B35;
  border: 2rpx solid #FF6B35;
}

.text-primary {
  color: #FF6B35;
}

.text-secondary {
  color: #999;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 价格样式 */
.price {
  color: #FF6B35;
  font-weight: bold;
}

.price-large {
  font-size: 36rpx;
}

.price-symbol {
  font-size: 24rpx;
}

/* 分隔线 */
.divider {
  height: 1rpx;
  background-color: #F0F0F0;
  margin: 20rpx 0;
}
