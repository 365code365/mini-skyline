.page {
  background-color: #F5F5F5;
}

/* 用户头部 */
.user-header {
  background: linear-gradient(135deg, #FF6B35, #FF8C69);
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
}

.user-info {
  flex: 1;
  margin-left: 20rpx;
}

.user-name {
  display: block;
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
}

.user-level {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 8rpx;
}

.user-points {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
}

.points-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
}

.points-value {
  font-size: 28rpx;
  color: #fff;
  font-weight: bold;
  margin-top: 4rpx;
}

/* 订单状态 */
.order-status {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 24rpx;
}

.status-title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.view-all {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
}

.status-list {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.status-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.status-name {
  font-size: 24rpx;
  color: #666;
  margin-top: 12rpx;
}

.status-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background-color: #FF6B35;
  color: #fff;
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  border-radius: 10rpx;
  min-width: 20rpx;
  text-align: center;
}

/* 功能区块 */
.function-section {
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.function-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 28rpx 24rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.function-item:last-child {
  border-bottom: none;
}

.function-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.function-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  margin-left: 20rpx;
}

.function-arrow {
  font-size: 28rpx;
  color: #ccc;
}

.bottom-space {
  height: 20rpx;
}
