.page {
  background-color: #F5F5F5;
  padding-bottom: 120rpx;
}

/* 商品图片 */
.product-images {
  position: relative;
  width: 100%;
  height: 600rpx;
  background-color: #fff;
}

.image-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-indicator {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 20rpx;
  padding: 6rpx 16rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.image-indicator text {
  color: #fff;
  font-size: 24rpx;
}

.separator {
  margin: 0 4rpx;
}

/* 商品信息 */
.product-info {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.price-row {
  display: flex;
  flex-direction: row;
  align-items: baseline;
  margin-bottom: 16rpx;
}

.price {
  font-size: 48rpx;
  color: #FF6B35;
  font-weight: bold;
}

.original-price {
  font-size: 26rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 16rpx;
}

.share-btn {
  margin-left: auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx 16rpx;
  background-color: #FFF5F0;
  border-radius: 20rpx;
}

.share-btn text {
  font-size: 24rpx;
  color: #FF6B35;
}

.name {
  display: block;
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  line-height: 1.4;
  margin-bottom: 12rpx;
}

.desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.tags {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  background-color: #FFF5F0;
  color: #FF6B35;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 4rpx;
}

/* 商品参数 */
.product-spec {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.spec-row {
  display: flex;
  flex-direction: row;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.spec-row:last-child {
  border-bottom: none;
}

.spec-label {
  width: 150rpx;
  font-size: 26rpx;
  color: #999;
}

.spec-value {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

/* 用户评价 */
.review-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.review-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.review-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.review-more {
  font-size: 24rpx;
  color: #999;
}

.review-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.review-item:last-child {
  border-bottom: none;
}

.review-user {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.user-name {
  font-size: 26rpx;
  color: #333;
}

.review-date {
  font-size: 22rpx;
  color: #999;
}

.review-content {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.review-images {
  display: flex;
  flex-direction: row;
  gap: 12rpx;
}

.review-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

/* 商品详情 */
.detail-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.detail-header {
  margin-bottom: 24rpx;
}

.detail-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.detail-content {
  display: flex;
  flex-direction: column;
}

.detail-text text {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 20rpx;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 110rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 20rpx;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
  z-index: 100;
}

.bar-left {
  display: flex;
  flex-direction: row;
  gap: 40rpx;
}

.bar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.item-text {
  font-size: 20rpx;
  color: #666;
  margin-top: 4rpx;
}

.cart-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background-color: #FF6B35;
  color: #fff;
  font-size: 18rpx;
  padding: 2rpx 8rpx;
  border-radius: 10rpx;
  min-width: 16rpx;
  text-align: center;
}

.bar-right {
  margin-left: auto;
  display: flex;
  flex-direction: row;
  gap: 16rpx;
}

.btn-add-cart,
.btn-buy {
  width: 220rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  border: none;
  padding: 0;
  font-size: 28rpx;
}

.btn-add-cart {
  background-color: #FFB84D;
  color: #fff;
}

.btn-buy {
  background-color: #FF6B35;
  color: #fff;
}

.bottom-space {
  height: 20rpx;
}
