.page {
  background-color: #F5F5F5;
}

/* 搜索栏 */
.search-bar {
  background: linear-gradient(135deg, #FF6B35, #FF8C69);
  padding: 20rpx;
  padding-bottom: 30rpx;
}

.search-box {
  background-color: #fff;
  border-radius: 32rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
  gap: 16rpx;
}

.search-text {
  font-size: 28rpx;
  color: #999;
}

/* Banner 轮播 */
.banner-swiper {
  height: 320rpx;
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.banner-item {
  height: 100%;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.banner-tag {
  background-color: #fff;
  color: #FF6B35;
  font-size: 22rpx;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  width: fit-content;
}

.banner-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  margin-top: 20rpx;
}

.banner-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 10rpx;
}

/* 分类导航 */
.category-nav {
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  padding: 30rpx 0;
  border-radius: 16rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100rpx;
}

.category-icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.category-name {
  font-size: 24rpx;
  color: #333;
  margin-top: 12rpx;
}

/* 区块 */
.section {
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  padding: 24rpx;
  border-radius: 16rpx;
}

.section-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.title-icon {
  font-size: 32rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-left: 8rpx;
}

.section-more {
  font-size: 24rpx;
  color: #999;
}

/* 横向滚动商品 */
.product-scroll {
  white-space: nowrap;
}

.scroll-card {
  display: inline-block;
  width: 200rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.scroll-card:last-child {
  margin-right: 0;
}

/* 商品网格 */
.product-grid {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}

/* 商品卡片 */
.product-card {
  width: 48%;
  background-color: #FAFAFA;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
  position: relative;
}

.product-badge {
  position: absolute;
  top: 0;
  left: 0;
  background-color: #FF6B35;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx 0 12rpx 0;
}

.product-img-placeholder {
  width: 100%;
  height: 180rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.product-name {
  display: block;
  font-size: 26rpx;
  color: #333;
  margin-top: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-desc {
  display: block;
  font-size: 22rpx;
  color: #999;
  margin-top: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-info {
  display: flex;
  flex-direction: row;
  align-items: baseline;
  margin-top: 10rpx;
}

.product-price {
  font-size: 32rpx;
  color: #FF6B35;
  font-weight: bold;
}

.product-original {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 8rpx;
}

.product-sold {
  font-size: 22rpx;
  color: #999;
  margin-left: auto;
}

.add-btn {
  position: absolute;
  bottom: 16rpx;
  right: 16rpx;
  width: 48rpx;
  height: 48rpx;
  background-color: #FF6B35;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 32rpx;
}

/* 商品列表 */
.product-list {
  display: flex;
  flex-direction: column;
}

.list-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.list-item:last-child {
  border-bottom: none;
}

.list-img-placeholder {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.list-info {
  flex: 1;
  margin-left: 20rpx;
  overflow: hidden;
}

.list-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.list-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.list-tags {
  display: flex;
  flex-direction: row;
  gap: 8rpx;
  margin-top: 10rpx;
}

.tag {
  background-color: #FFF5F0;
  color: #FF6B35;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.list-bottom {
  display: flex;
  flex-direction: row;
  align-items: baseline;
  margin-top: 12rpx;
}

.list-price {
  font-size: 32rpx;
  color: #FF6B35;
  font-weight: bold;
}

.list-original {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 8rpx;
}

.list-add {
  background-color: #FF6B35;
  color: #fff;
  font-size: 24rpx;
  padding: 12rpx 20rpx;
  border-radius: 24rpx;
  flex-shrink: 0;
  margin-left: 16rpx;
}

.bottom-space {
  height: 20rpx;
}
