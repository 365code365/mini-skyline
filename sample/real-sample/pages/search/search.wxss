.page {
  background-color: #F5F5F5;
}

/* 搜索栏 */
.search-bar {
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
  gap: 20rpx;
}

.search-input-wrapper {
  flex: 1;
  background-color: #F5F5F5;
  border-radius: 32rpx;
  padding: 16rpx 24rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.cancel-btn {
  font-size: 28rpx;
  color: #666;
}

/* 搜索历史 */
.history-section {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 24rpx;
}

.section-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.history-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  gap: 16rpx;
}

.history-item {
  background-color: #F5F5F5;
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
}

.history-text {
  font-size: 26rpx;
  color: #666;
}

/* 热门搜索 */
.hot-section {
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 16rpx;
  padding: 24rpx;
}

.hot-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  gap: 20rpx;
}

.hot-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #F5F5F5;
  padding: 12rpx 20rpx;
  border-radius: 24rpx;
}

.hot-item.hot-top {
  background-color: #FFF5F0;
}

.hot-index {
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  background-color: #FF6B35;
  color: #fff;
  font-size: 20rpx;
  border-radius: 4rpx;
  margin-right: 8rpx;
}

.hot-text {
  font-size: 26rpx;
  color: #666;
}

/* 搜索结果 */
.result-section {
  padding: 20rpx;
}

.result-header {
  margin-bottom: 20rpx;
}

.result-count {
  font-size: 26rpx;
  color: #999;
}

.result-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.result-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.result-img-placeholder {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.result-info {
  flex: 1;
  margin-left: 20rpx;
  overflow: hidden;
}

.result-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 8rpx;
}

.result-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 12rpx;
}

.result-bottom {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.result-price {
  font-size: 32rpx;
  color: #FF6B35;
  font-weight: bold;
}

.result-sold {
  font-size: 22rpx;
  color: #999;
  margin-left: auto;
}

.result-add {
  width: 48rpx;
  height: 48rpx;
  background-color: #FF6B35;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 32rpx;
  margin-left: 16rpx;
  flex-shrink: 0;
}

/* 空结果 */
.empty-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}

.empty-icon {
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.empty-tip {
  font-size: 24rpx;
  color: #ccc;
}

.bottom-space {
  height: 20rpx;
}
