.page {
  background-color: #F5F5F5;
  min-height: 100%;
}

/* 页面头部 */
.page-header {
  background-color: #667eea;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 8rpx;
}

.page-desc {
  font-size: 26rpx;
  color: #FFFFFF;
}

/* 通用 Section 样式 */
.section {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  margin: 0 20rpx 20rpx 20rpx;
  padding: 28rpx;
}

.section-header {
  flex-direction: row;
  align-items: center;
  margin-bottom: 24rpx;
  gap: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

/* 视频演示 */
.video-demo {
  align-items: center;
  gap: 16rpx;
}

.video-demo video {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
}

.video-desc {
  font-size: 24rpx;
  color: #999999;
}

/* 文本演示 */
.text-demo {
  gap: 16rpx;
}

.text-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.text-body {
  font-size: 28rpx;
  color: #666666;
}

.text-small {
  font-size: 24rpx;
  color: #999999;
}

.text-primary {
  font-size: 28rpx;
  color: #007AFF;
}

.text-success {
  font-size: 28rpx;
  color: #07C160;
}

.text-warning {
  font-size: 28rpx;
  color: #FF9500;
}

.text-danger {
  font-size: 28rpx;
  color: #F76260;
}

/* 状态列表 */
.status-list {
  gap: 16rpx;
}

.status-card {
  flex-direction: row;
  align-items: center;
  padding: 24rpx;
  border-radius: 12rpx;
  gap: 16rpx;
}

.status-content {
  flex: 1;
  gap: 4rpx;
}

.status-title {
  font-size: 28rpx;
  font-weight: bold;
}

.status-desc {
  font-size: 24rpx;
  color: #666666;
}

/* 图标网格 */
.icon-grid {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}

.icon-item {
  width: 160rpx;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 16rpx;
}

.icon-label {
  font-size: 22rpx;
  color: #666666;
  margin-top: 8rpx;
}

/* 卡片列表 */
.card-list {
  gap: 16rpx;
}

.card-item {
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
  background-color: #F8F9FA;
  border-radius: 12rpx;
  gap: 16rpx;
}

.card-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  align-items: center;
  justify-content: center;
}

.card-content {
  flex: 1;
  gap: 4rpx;
}

.card-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}

.card-desc {
  font-size: 24rpx;
  color: #999999;
}

/* 操作按钮 */
.action-buttons {
  gap: 16rpx;
}

.button-row {
  flex-direction: row;
  gap: 16rpx;
}

/* 底部间距 */
.bottom-space {
  height: 120rpx;
}
