.page {
  background-color: #F5F5F5;
  min-height: 100%;
}

/* 页面头部 */
.page-header {
  background-color: #FFFFFF;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #E5E5E5;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.page-desc {
  font-size: 26rpx;
  color: #999999;
}

/* 通用 Section 样式 */
.section {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  margin: 0 20rpx 20rpx 20rpx;
  padding: 28rpx;
}

.section-header {
  flex-direction: row;
  align-items: center;
  margin-bottom: 24rpx;
  gap: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

/* 文本样式 */
.text-demo {
  gap: 16rpx;
}

.text-large {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.text-normal {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

.text-small {
  font-size: 24rpx;
  color: #999999;
}

.text-primary {
  font-size: 28rpx;
  color: #007AFF;
}

.text-success {
  font-size: 28rpx;
  color: #07C160;
}

.text-warning {
  font-size: 28rpx;
  color: #FF9500;
}

.text-danger {
  font-size: 28rpx;
  color: #FA5151;
}

/* 状态提示 */
.status-list {
  gap: 16rpx;
}

.status-item {
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  gap: 16rpx;
}

.status-success {
  background-color: #F0FFF4;
}

.status-info {
  background-color: #F0F7FF;
}

.status-warning {
  background-color: #FFFBF0;
}

.status-error {
  background-color: #FFF0F0;
}

.status-content {
  flex: 1;
  gap: 4rpx;
}

.status-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}

.status-desc {
  font-size: 24rpx;
  color: #666666;
}

/* 卡片列表 */
.card-list {
  gap: 16rpx;
}

.card {
  flex-direction: row;
  align-items: center;
  padding: 24rpx;
  background-color: #FAFAFA;
  border-radius: 12rpx;
  gap: 16rpx;
}

.card-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  align-items: center;
  justify-content: center;
}

.card-icon-blue {
  background-color: #E8F4FD;
}

.card-icon-green {
  background-color: #E8F8EE;
}

.card-icon-orange {
  background-color: #FFF4E6;
}

.card-body {
  flex: 1;
  gap: 4rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
}

.card-desc {
  font-size: 24rpx;
  color: #999999;
}

.card-arrow {
  padding: 0 8rpx;
}

.arrow-text {
  font-size: 40rpx;
  color: #CCCCCC;
}

/* 操作按钮组 */
.action-group {
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.action-row {
  flex-direction: row;
  gap: 16rpx;
}

/* 底部间距 */
.bottom-space {
  height: 120rpx;
}
