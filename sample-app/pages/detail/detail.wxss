.page {
  background-color: #F5F5F5;
  padding-bottom: 200rpx;
}

/* 商品图片 */
.product-image {
  width: 100%;
  height: 500rpx;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 商品信息 */
.product-info {
  background-color: #fff;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.price-row {
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.price {
  font-size: 48rpx;
  color: #FF6B35;
  font-weight: bold;
}

.original-price {
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 16rpx;
}

.product-name {
  display: block;
  font-size: 34rpx;
  color: #333;
  font-weight: bold;
  margin-top: 16rpx;
}

.product-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-top: 12rpx;
}

.meta-row {
  display: flex;
  flex-direction: row;
  margin-top: 16rpx;
}

.meta {
  font-size: 24rpx;
  color: #999;
  margin-right: 30rpx;
}

/* 规格选择 */
.spec-section {
  background-color: #fff;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.spec-title {
  display: block;
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.spec-row {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.spec-item {
  padding: 12rpx 24rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  margin-right: 16rpx;
  margin-bottom: 12rpx;
  border: 2rpx solid transparent;
}

.spec-item.active {
  background-color: #FFF5F0;
  border-color: #FF6B35;
}

.spec-item.active text {
  color: #FF6B35;
}

.spec-item text {
  font-size: 28rpx;
  color: #333;
}

/* 数量选择 */
.qty-section {
  background-color: #fff;
  padding: 24rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.qty-label {
  font-size: 30rpx;
  color: #333;
}

.qty-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.qty-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.qty-btn text {
  font-size: 32rpx;
  color: #666;
}

.qty-num {
  width: 64rpx;
  text-align: center;
  font-size: 28rpx;
}

/* 商品详情 */
.detail-section {
  background-color: #fff;
  padding: 24rpx;
}

.detail-title {
  display: block;
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

/* 底部操作 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 20rpx;
  border-top: 1rpx solid #eee;
}

.action-left {
  display: flex;
  flex-direction: row;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 30rpx;
}

.action-item text {
  font-size: 20rpx;
  color: #666;
  margin-top: 4rpx;
}

.action-right {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.cart-btn {
  background-color: #FFB800;
  color: #fff;
  font-size: 26rpx;
  padding: 0 24rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 32rpx;
  margin-right: 12rpx;
}

.buy-btn {
  background-color: #FF6B35;
  font-size: 26rpx;
  padding: 0 24rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 32rpx;
}

.bottom-space {
  height: 200rpx;
}
