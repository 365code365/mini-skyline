<view class="page">
  <!-- 页面标题 -->
  <view class="page-header">
    <text class="page-title">更多组件</text>
    <text class="page-desc">More Components</text>
  </view>

  <!-- 视频组件 -->
  <view class="section">
    <view class="section-header">
      <icon type="info" size="20"></icon>
      <text class="section-title">视频 Video</text>
    </view>
    <view class="video-demo">
      <video src="/sample-app/assets/oceans.mp4" autoplay="true" loop="true" controls="true"></video>
      <text class="video-desc">海洋风景视频</text>
    </view>
  </view>

  <!-- 文本组件 -->
  <view class="section">
    <view class="section-header">
      <icon type="info" size="20"></icon>
      <text class="section-title">文本 Text</text>
    </view>
    <view class="text-demo">
      <text class="text-title">大号标题文字</text>
      <text class="text-body">这是一段普通的正文内容，用于展示文本组件的基本显示效果。</text>
      <text class="text-small">小号辅助说明文字 - Small Text</text>
      <text class="text-primary">主题色文字 Primary Color</text>
      <text class="text-success">成功状态文字 Success</text>
      <text class="text-warning">警告状态文字 Warning</text>
      <text class="text-danger">危险状态文字 Danger</text>
    </view>
  </view>

  <!-- 状态提示 -->
  <view class="section">
    <view class="section-header">
      <icon type="success" size="20"></icon>
      <text class="section-title">状态提示</text>
    </view>
    <view class="status-list">
      <view class="status-card" wx:for="{{statusList}}" wx:key="id" style="background-color: {{item.bgColor}};">
        <icon type="{{item.icon}}" size="24" color="{{item.color}}"></icon>
        <view class="status-content">
          <text class="status-title" style="color: {{item.color}};">{{item.title}}</text>
          <text class="status-desc">{{item.desc}}</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 图标展示 -->
  <view class="section">
    <view class="section-header">
      <icon type="info" size="20"></icon>
      <text class="section-title">图标 Icon</text>
    </view>
    <view class="icon-grid">
      <view class="icon-item" wx:for="{{iconList}}" wx:key="type">
        <icon type="{{item.type}}" size="32" color="{{item.color}}"></icon>
        <text class="icon-label">{{item.label}}</text>
      </view>
    </view>
  </view>

  <!-- 卡片列表 -->
  <view class="section">
    <view class="section-header">
      <icon type="waiting" size="20"></icon>
      <text class="section-title">卡片列表</text>
    </view>
    <view class="card-list">
      <view class="card-item" wx:for="{{cardList}}" wx:key="id" bindtap="onCardTap" data-id="{{item.id}}">
        <view class="card-icon" style="background-color: {{item.color}};">
          <icon type="{{item.icon}}" size="24" color="#FFFFFF"></icon>
        </view>
        <view class="card-content">
          <text class="card-title">{{item.title}}</text>
          <text class="card-desc">{{item.desc}}</text>
        </view>
        <icon type="success_no_circle" size="20" color="#CCCCCC"></icon>
      </view>
    </view>
  </view>

  <!-- 操作按钮 -->
  <view class="section">
    <view class="section-header">
      <icon type="success" size="20"></icon>
      <text class="section-title">操作按钮</text>
    </view>
    <view class="action-buttons">
      <button type="primary" bindtap="onBackToIndex">返回首页</button>
      <view class="button-row">
        <button type="default" size="mini" bindtap="onRefresh">刷新</button>
        <button type="warn" size="mini" bindtap="onClear">清除</button>
      </view>
    </view>
  </view>

  <!-- 底部间距 -->
  <view class="bottom-space"></view>
</view>
