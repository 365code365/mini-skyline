<view class="page">
  <!-- 导航栏 -->
  <view class="navbar">
    <view class="nav-back" bindtap="onBack">
      <text class="back-icon">返</text>
    </view>
    <text class="navbar-title">详情页</text>
  </view>

  <!-- 详情内容 -->
  <view class="detail-container">
    <!-- 商品图片区域 -->
    <view class="detail-image">
      <view class="image-placeholder">
        <text class="placeholder-text">商品 {{itemId}}</text>
      </view>
    </view>

    <!-- 商品信息 -->
    <view class="detail-info">
      <text class="detail-title">商品{{itemId}}的标题</text>
      <text class="detail-price">¥ {{price}}</text>
      <text class="detail-desc">这是商品{{itemId}}的详细描述信息，包含了商品的各种特性和说明。</text>
    </view>

    <!-- 商品参数 -->
    <view class="detail-section">
      <text class="section-title">商品参数</text>
      <view class="param-list">
        <view class="param-item">
          <text class="param-label">品牌</text>
          <text class="param-value">示例品牌</text>
        </view>
        <view class="param-item">
          <text class="param-label">产地</text>
          <text class="param-value">中国</text>
        </view>
        <view class="param-item">
          <text class="param-label">规格</text>
          <text class="param-value">标准版</text>
        </view>
      </view>
    </view>

    <!-- 数量选择 -->
    <view class="detail-section">
      <text class="section-title">购买数量</text>
      <view class="quantity-selector">
        <view class="qty-btn" bindtap="onDecrease">
          <text class="qty-text">-</text>
        </view>
        <text class="qty-value">{{quantity}}</text>
        <view class="qty-btn" bindtap="onIncrease">
          <text class="qty-text">+</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 底部操作栏 -->
  <view class="bottom-bar">
    <view class="bar-btn btn-cart" bindtap="onAddCart">
      <text class="bar-btn-text">加入购物车</text>
    </view>
    <view class="bar-btn btn-buy" bindtap="onBuyNow">
      <text class="bar-btn-text">立即购买</text>
    </view>
  </view>
</view>
