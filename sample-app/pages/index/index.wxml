<view class="container">
  <view class="section">
    <text class="section-title">按钮 Button</text>
    <button type="primary">主要按钮</button>
    <button type="default">默认按钮</button>
    <button type="warn">警告按钮</button>
    <view class="row">
      <button type="primary" size="mini">小按钮</button>
      <button type="default" size="mini">小按钮</button>
      <button type="warn" size="mini">小按钮</button>
    </view>
    <button type="primary" plain="true">镂空主要</button>
    <button type="default" disabled="true">禁用按钮</button>
  </view>

  <view class="section">
    <text class="section-title">图标 Icon</text>
    <view class="row">
      <icon type="success" size="30"></icon>
      <icon type="success_no_circle" size="30"></icon>
      <icon type="info" size="30"></icon>
      <icon type="warn" size="30"></icon>
      <icon type="waiting" size="30"></icon>
      <icon type="cancel" size="30"></icon>
      <icon type="download" size="30"></icon>
      <icon type="search" size="30"></icon>
    </view>
  </view>

  <view class="section">
    <text class="section-title">进度条 Progress</text>
    <progress percent="20" stroke-width="3"></progress>
    <progress percent="50" activeColor="#FF6B6B" show-info="true"></progress>
    <progress percent="80" activeColor="#4ECDC4" stroke-width="8"></progress>
  </view>

  <view class="section">
    <text class="section-title">开关 Switch</text>
    <view class="row">
      <switch checked="true"></switch>
      <switch></switch>
      <switch type="checkbox" checked="true"></switch>
      <switch type="checkbox"></switch>
    </view>
  </view>
</view>
