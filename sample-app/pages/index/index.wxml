<view class="page">
  <!-- 顶部 Banner -->
  <view class="banner">
    <view class="banner-content">
      <text class="banner-title">Mini Render</text>
      <text class="banner-subtitle">轻量级小程序渲染引擎</text>
    </view>
  </view>

  <!-- 功能卡片 - 使用 wx:for 循环渲染 -->
  <view class="section">
    <view class="section-header">
      <icon type="success" size="20"></icon>
      <text class="section-title">功能展示</text>
    </view>
    <view class="feature-grid">
      <view class="feature-card" wx:for="{{features}}" wx:key="id" bindtap="onFeatureTap" data-id="{{item.id}}">
        <icon type="{{item.icon}}" size="28" color="{{item.color}}"></icon>
        <text class="feature-name">{{item.name}}</text>
        <text class="feature-desc">{{item.desc}}</text>
      </view>
    </view>
  </view>

  <!-- 图片展示 -->
  <view class="section">
    <view class="section-header">
      <icon type="info" size="20"></icon>
      <text class="section-title">图片 Image</text>
    </view>
    <view class="image-grid">
      <view class="image-item" wx:for="{{images}}" wx:key="id">
        <image class="demo-image" src="{{item.src}}" mode="{{item.mode}}"></image>
        <text class="image-label">{{item.label}}</text>
      </view>
    </view>
  </view>

  <!-- 按钮组件 -->
  <view class="section">
    <view class="section-header">
      <icon type="success" size="20"></icon>
      <text class="section-title">按钮 Button</text>
    </view>
    <view class="button-group">
      <button type="primary" bindtap="onNavigateToList">查看表单组件</button>
      <button type="default" bindtap="onNavigateToDetail">查看更多组件</button>
    </view>
    <view class="button-row">
      <button type="primary" size="mini">迷你</button>
      <button type="default" size="mini">迷你</button>
      <button type="warn" size="mini">迷你</button>
    </view>
  </view>

  <!-- 条件渲染展示 -->
  <view class="section">
    <view class="section-header">
      <icon type="waiting" size="20"></icon>
      <text class="section-title">条件渲染</text>
    </view>
    <view class="condition-demo">
      <view class="switch-row">
        <text class="switch-label">显示内容</text>
        <switch checked="{{showContent}}" bindchange="onToggleContent" color="#07C160"></switch>
      </view>
      <view class="content-box" wx:if="{{showContent}}">
        <icon type="success" size="24"></icon>
        <text class="content-text">这是条件渲染的内容</text>
      </view>
      <view class="content-box hidden-box" wx:if="{{!showContent}}">
        <icon type="info" size="24"></icon>
        <text class="content-text">内容已隐藏</text>
      </view>
    </view>
  </view>

  <!-- 列表渲染展示 -->
  <view class="section">
    <view class="section-header">
      <icon type="info" size="20"></icon>
      <text class="section-title">列表渲染 wx:for</text>
    </view>
    <view class="list-demo">
      <view class="list-item" wx:for="{{todoList}}" wx:key="id">
        <checkbox checked="{{item.done}}" color="#07C160"></checkbox>
        <text class="list-text {{item.done ? 'done' : ''}}">{{item.text}}</text>
        <text class="list-index">{{index + 1}}</text>
      </view>
    </view>
  </view>

  <!-- 进度条组件 -->
  <view class="section">
    <view class="section-header">
      <icon type="waiting" size="20"></icon>
      <text class="section-title">进度条 Progress</text>
    </view>
    <view class="progress-list">
      <view class="progress-item" wx:for="{{progressList}}" wx:key="id">
        <text class="progress-label">{{item.label}}</text>
        <progress percent="{{item.value}}" activeColor="{{item.color}}" stroke-width="{{item.height}}" show-info="{{item.showInfo}}"></progress>
      </view>
    </view>
  </view>

  <!-- 开关组件 -->
  <view class="section">
    <view class="section-header">
      <icon type="success_no_circle" size="20"></icon>
      <text class="section-title">开关 Switch</text>
    </view>
    <view class="switch-list">
      <view class="switch-item" wx:for="{{switchList}}" wx:key="id">
        <text class="switch-label">{{item.label}}</text>
        <switch checked="{{item.checked}}" type="{{item.type}}" color="{{item.color}}" disabled="{{item.disabled}}"></switch>
      </view>
    </view>
  </view>

  <!-- 底部间距 -->
  <view class="bottom-space"></view>
</view>
