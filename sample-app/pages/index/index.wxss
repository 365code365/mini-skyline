/* 页面容器 */
.page {
  padding: 0;
  background-color: #f5f5f5;
}

/* 导航栏 */
.navbar {
  background-color: #07C160;
  padding: 40rpx 30rpx 20rpx;
}

.navbar-title {
  font-size: 36rpx;
  color: #ffffff;
}

/* 用户卡片 */
.user-card {
  display: flex;
  flex-direction: row;
  background-color: #ffffff;
  padding: 30rpx;
  margin: 20rpx;
  border-radius: 16rpx;
  gap: 20rpx;
}

.avatar {
  background-color: #07C160;
  border-radius: 50rpx;
  padding: 20rpx;
}

.avatar-text {
  font-size: 32rpx;
  color: #ffffff;
}

.user-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.user-name {
  font-size: 32rpx;
  color: #333333;
}

.user-desc {
  font-size: 24rpx;
  color: #999999;
}

/* 区块 */
.section {
  background-color: #ffffff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 20rpx;
}

/* 计数器 */
.counter-card {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.counter-value {
  font-size: 80rpx;
  color: #07C160;
}

.counter-buttons {
  display: flex;
  flex-direction: row;
  gap: 20rpx;
}

/* 按钮样式 */
.btn {
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.btn-primary {
  background-color: #07C160;
  color: #ffffff;
}

.btn-danger {
  background-color: #FF3B30;
  color: #ffffff;
}

.btn-default {
  background-color: #E5E5EA;
  color: #333333;
}

/* 待办列表 */
.todo-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.todo-item {
  display: flex;
  flex-direction: row;
  gap: 16rpx;
  padding: 16rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

.todo-checkbox {
  background-color: #e0e0e0;
  border-radius: 4rpx;
  padding: 4rpx 8rpx;
}

.todo-checkbox.checked {
  background-color: #07C160;
}

.check-mark {
  font-size: 24rpx;
  color: #ffffff;
}

.todo-text {
  font-size: 28rpx;
  color: #333333;
}

.todo-text.done {
  color: #999999;
}

/* 颜色选择器 */
.color-picker {
  display: flex;
  flex-direction: row;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.color-item {
  padding: 30rpx;
  border-radius: 8rpx;
}

.color-item.selected {
  border-radius: 16rpx;
}

.color-red {
  background-color: #FF3B30;
}

.color-orange {
  background-color: #FF9500;
}

.color-yellow {
  background-color: #FFCC00;
}

.color-green {
  background-color: #34C759;
}

.color-blue {
  background-color: #007AFF;
}

.color-purple {
  background-color: #AF52DE;
}

.color-label {
  font-size: 24rpx;
  color: #666666;
}

/* 功能网格 */
.action-grid {
  display: flex;
  flex-direction: row;
  gap: 20rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.action-icon {
  border-radius: 12rpx;
  padding: 20rpx;
}

.icon-scan {
  background-color: #007AFF;
}

.icon-pay {
  background-color: #34C759;
}

.icon-card {
  background-color: #FF9500;
}

.icon-more {
  background-color: #8E8E93;
}

.icon-text {
  font-size: 28rpx;
  color: #ffffff;
}

.action-label {
  font-size: 24rpx;
  color: #666666;
}

/* 消息列表 */
.message-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.message-item {
  display: flex;
  flex-direction: row;
  gap: 16rpx;
  padding: 16rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

.message-avatar {
  border-radius: 40rpx;
  padding: 16rpx;
}

.avatar-blue {
  background-color: #007AFF;
}

.avatar-green {
  background-color: #34C759;
}

.avatar-orange {
  background-color: #FF9500;
}

.avatar-purple {
  background-color: #AF52DE;
}

.message-content {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.message-name {
  font-size: 28rpx;
  color: #333333;
}

.message-text {
  font-size: 24rpx;
  color: #999999;
}

.message-time {
  font-size: 22rpx;
  color: #cccccc;
}

/* 数据统计 */
.stats-grid {
  display: flex;
  flex-direction: row;
  gap: 16rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 20rpx;
  background-color: #f0f9f4;
  border-radius: 8rpx;
}

.stat-value {
  font-size: 36rpx;
  color: #07C160;
}

.stat-label {
  font-size: 22rpx;
  color: #999999;
}

/* 功能列表 */
.feature-list {
  display: flex;
  flex-direction: column;
  gap: 0;
}

.feature-item {
  display: flex;
  flex-direction: row;
  gap: 16rpx;
  padding: 24rpx 0;
}

.feature-icon {
  font-size: 28rpx;
  color: #007AFF;
  background-color: #e8f4fd;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
}

.feature-name {
  font-size: 28rpx;
  color: #333333;
}

.feature-arrow {
  font-size: 28rpx;
  color: #cccccc;
}

/* 公告栏 */
.notice-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.notice-item {
  display: flex;
  flex-direction: row;
  gap: 12rpx;
  padding: 16rpx;
  background-color: #fafafa;
  border-radius: 8rpx;
}

.notice-tag {
  font-size: 20rpx;
  color: #ffffff;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}

.tag-new {
  background-color: #FF3B30;
}

.tag-hot {
  background-color: #FF9500;
}

.tag-info {
  background-color: #007AFF;
}

.notice-text {
  font-size: 26rpx;
  color: #666666;
}

/* 底部 */
.footer {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  gap: 8rpx;
}

.footer-text {
  font-size: 24rpx;
  color: #999999;
}

.footer-sub {
  font-size: 20rpx;
  color: #cccccc;
}


/* Tab 内容区域 */
.tab-content {
  display: flex;
  flex-direction: column;
}

/* 底部 TabBar */
.tabbar {
  display: flex;
  flex-direction: row;
  background-color: #ffffff;
  padding: 10rpx 0 20rpx;
  justify-content: space-around;
}

.tabbar-item {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  align-items: center;
  padding: 0 30rpx;
}

.tabbar-icon {
  font-size: 40rpx;
  color: #999999;
}

.tabbar-label {
  font-size: 22rpx;
  color: #999999;
}

.tabbar-icon-active {
  font-size: 40rpx;
  color: #07C160;
}

.tabbar-label-active {
  font-size: 22rpx;
  color: #07C160;
}

/* TabBar 占位 */
.tabbar-placeholder {
  height: 120rpx;
}

/* 发现页样式 */
.discover-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.discover-item {
  display: flex;
  flex-direction: row;
  gap: 16rpx;
  padding: 16rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

.discover-icon {
  border-radius: 8rpx;
  padding: 16rpx;
}

.discover-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.discover-title {
  font-size: 28rpx;
  color: #333333;
}

.discover-desc {
  font-size: 22rpx;
  color: #999999;
}

/* 附近的人 */
.nearby-list {
  display: flex;
  flex-direction: row;
  gap: 20rpx;
}

.nearby-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.nearby-avatar {
  border-radius: 50rpx;
  padding: 20rpx;
}

.nearby-name {
  font-size: 24rpx;
  color: #333333;
}

.nearby-distance {
  font-size: 20rpx;
  color: #999999;
}

/* 个人中心样式 */
.profile-header {
  display: flex;
  flex-direction: row;
  gap: 20rpx;
  background-color: #07C160;
  padding: 40rpx 30rpx;
  margin: 20rpx;
  border-radius: 16rpx;
}

.profile-avatar {
  background-color: #ffffff;
  border-radius: 50rpx;
  padding: 24rpx;
}

.profile-avatar-text {
  font-size: 40rpx;
  color: #07C160;
}

.profile-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.profile-name {
  font-size: 36rpx;
  color: #ffffff;
}

.profile-id {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 设置列表 */
.settings-list {
  display: flex;
  flex-direction: column;
  gap: 0;
}

.settings-item {
  display: flex;
  flex-direction: row;
  gap: 16rpx;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.settings-icon {
  font-size: 28rpx;
  color: #007AFF;
  background-color: #e8f4fd;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
}

.settings-name {
  font-size: 28rpx;
  color: #333333;
  flex: 1;
}

.settings-arrow {
  font-size: 28rpx;
  color: #cccccc;
}

/* 退出登录按钮 */
.logout-btn {
  background-color: #FF3B30;
  padding: 24rpx;
  border-radius: 8rpx;
}

.logout-text {
  font-size: 28rpx;
  color: #ffffff;
}

/* 背景色类 */
.bg-red {
  background-color: #FF3B30;
}

.bg-orange {
  background-color: #FF9500;
}

.bg-blue {
  background-color: #007AFF;
}

.bg-green {
  background-color: #34C759;
}

.bg-purple {
  background-color: #AF52DE;
}


/* 导航列表 */
.nav-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.nav-item {
  display: flex;
  flex-direction: row;
  gap: 16rpx;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

.nav-icon {
  border-radius: 8rpx;
  padding: 12rpx;
}

.nav-text {
  font-size: 28rpx;
  color: #333333;
}

.nav-arrow {
  font-size: 28rpx;
  color: #cccccc;
}
