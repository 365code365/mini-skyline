.page {
  background-color: #F5F5F5;
  min-height: 100%;
}

/* Banner 样式 */
.banner {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  background-color: #667eea;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
}

.banner-content {
  align-items: center;
}

.banner-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 12rpx;
}

.banner-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.85);
}

/* 通用 Section 样式 */
.section {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  margin: 0 20rpx 20rpx 20rpx;
  padding: 28rpx;
}

.section-header {
  flex-direction: row;
  align-items: center;
  margin-bottom: 24rpx;
  gap: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

/* 按钮样式 */
.button-group {
  margin-bottom: 20rpx;
}

.button-row {
  flex-direction: row;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

/* 图标网格 */
.icon-grid {
  flex-direction: row;
  flex-wrap: wrap;
  gap: 20rpx;
}

.icon-item {
  width: 140rpx;
  align-items: center;
  padding: 16rpx 0;
}

.icon-label {
  font-size: 22rpx;
  color: #666666;
  margin-top: 8rpx;
}

/* 进度条样式 */
.progress-item {
  margin-bottom: 24rpx;
}

.progress-label {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 12rpx;
}

/* 开关列表 */
.switch-list {
  gap: 8rpx;
}

.switch-item {
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.switch-label {
  font-size: 28rpx;
  color: #333333;
}

/* 底部间距 */
.bottom-space {
  height: 120rpx;
}
