/* 页面容器 */
.page {
  padding: 0;
  background-color: #f5f5f5;
}

/* 导航栏 */
.navbar {
  background-color: #07C160;
  padding: 40rpx 30rpx 20rpx;
}

.navbar-title {
  font-size: 36rpx;
  color: #ffffff;
}

/* 用户卡片 */
.user-card {
  display: flex;
  flex-direction: row;
  background-color: #ffffff;
  padding: 30rpx;
  margin: 20rpx;
  border-radius: 16rpx;
  gap: 20rpx;
}

.avatar {
  background-color: #07C160;
  border-radius: 50rpx;
  padding: 20rpx;
}

.avatar-text {
  font-size: 32rpx;
  color: #ffffff;
}

.user-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.user-name {
  font-size: 32rpx;
  color: #333333;
}

.user-desc {
  font-size: 24rpx;
  color: #999999;
}

/* 区块 */
.section {
  background-color: #ffffff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 20rpx;
}

/* 计数器 */
.counter-card {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.counter-value {
  font-size: 80rpx;
  color: #07C160;
}

.counter-buttons {
  display: flex;
  flex-direction: row;
  gap: 20rpx;
}

/* 按钮样式 */
.btn {
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.btn-primary {
  background-color: #07C160;
  color: #ffffff;
}

.btn-danger {
  background-color: #FF3B30;
  color: #ffffff;
}

.btn-default {
  background-color: #E5E5EA;
  color: #333333;
}

/* 待办列表 */
.todo-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.todo-item {
  display: flex;
  flex-direction: row;
  gap: 16rpx;
  padding: 16rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

.todo-checkbox {
  background-color: #e0e0e0;
  border-radius: 4rpx;
  padding: 4rpx 8rpx;
}

.todo-checkbox.checked {
  background-color: #07C160;
}

.check-mark {
  font-size: 24rpx;
  color: #ffffff;
}

.todo-text {
  font-size: 28rpx;
  color: #333333;
}

.todo-text.done {
  color: #999999;
}

/* 颜色选择器 */
.color-picker {
  display: flex;
  flex-direction: row;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.color-item {
  padding: 30rpx;
  border-radius: 8rpx;
}

.color-item.selected {
  border-radius: 16rpx;
}

.color-red {
  background-color: #FF3B30;
}

.color-orange {
  background-color: #FF9500;
}

.color-yellow {
  background-color: #FFCC00;
}

.color-green {
  background-color: #34C759;
}

.color-blue {
  background-color: #007AFF;
}

.color-purple {
  background-color: #AF52DE;
}

.color-label {
  font-size: 24rpx;
  color: #666666;
}

/* 功能网格 */
.action-grid {
  display: flex;
  flex-direction: row;
  gap: 20rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.action-icon {
  border-radius: 12rpx;
  padding: 20rpx;
}

.icon-scan {
  background-color: #007AFF;
}

.icon-pay {
  background-color: #34C759;
}

.icon-card {
  background-color: #FF9500;
}

.icon-more {
  background-color: #8E8E93;
}

.icon-text {
  font-size: 28rpx;
  color: #ffffff;
}

.action-label {
  font-size: 24rpx;
  color: #666666;
}

/* 底部 */
.footer {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  gap: 8rpx;
}

.footer-text {
  font-size: 24rpx;
  color: #999999;
}

.footer-sub {
  font-size: 20rpx;
  color: #cccccc;
}
