.page {
  background-color: #F5F5F5;
}

/* 搜索栏 */
.search-bar {
  background-color: #FF6B35;
  padding: 20rpx;
}

.search-input {
  background-color: #fff;
  border-radius: 32rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  width: 100%;
}

/* Banner */
.banner {
  background-color: #FF6B35;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
}

.banner-tag {
  background-color: #fff;
  color: #FF6B35;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
}

.banner-title {
  display: block;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 16rpx;
}

.banner-desc {
  display: block;
  color: rgba(255,255,255,0.8);
  font-size: 24rpx;
  margin-top: 8rpx;
}

/* 分类 */
.category-section {
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  padding: 24rpx;
  border-radius: 16rpx;
}

.category-row {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 120rpx;
}

.category-name {
  font-size: 24rpx;
  color: #333;
  margin-top: 12rpx;
}

/* 区块 */
.section {
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  padding: 24rpx;
  border-radius: 16rpx;
}

.section-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  width: 100%;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  font-size: 26rpx;
  color: #999;
}

/* 商品网格 */
.product-row {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}

.product-card {
  width: 48%;
  background-color: #FAFAFA;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
}

.product-img {
  width: 100%;
  height: 200rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.product-name {
  display: block;
  font-size: 26rpx;
  color: #333;
  margin-top: 12rpx;
}

.product-price-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 12rpx;
  width: 100%;
}

.product-price {
  font-size: 32rpx;
  color: #FF6B35;
  font-weight: bold;
}

.add-btn {
  width: 48rpx;
  height: 48rpx;
  background-color: #FF6B35;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-btn-text {
  color: #fff;
  font-size: 32rpx;
}

/* 商品列表 */
.product-list {
  display: flex;
  flex-direction: column;
}

.list-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.list-img {
  width: 140rpx;
  height: 140rpx;
  background-color: #f0f0f0;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.list-info {
  flex: 1;
  margin-left: 16rpx;
}

.list-name {
  display: block;
  font-size: 28rpx;
  color: #333;
}

.list-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.list-price {
  display: block;
  font-size: 30rpx;
  color: #FF6B35;
  font-weight: bold;
  margin-top: 8rpx;
}

.list-btn {
  background-color: #FF6B35;
}

.bottom-space {
  height: 0;
}
