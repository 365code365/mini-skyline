.page {
  background-color: #F5F5F5;
  min-height: 100%;
}

/* Banner 样式 */
.banner {
  background-color: #667eea;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
}

.banner-content {
  align-items: center;
}

.banner-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 12rpx;
}

.banner-subtitle {
  font-size: 28rpx;
  color: #FFFFFF;
}

/* 通用 Section 样式 */
.section {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  margin: 0 20rpx 20rpx 20rpx;
  padding: 28rpx;
}

.section-header {
  flex-direction: row;
  align-items: center;
  margin-bottom: 24rpx;
  gap: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

/* 功能卡片网格 */
.feature-grid {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  gap: 16rpx;
}

.feature-card {
  width: 150rpx;
  background-color: #F8F9FA;
  border-radius: 12rpx;
  padding: 20rpx;
  align-items: center;
}

.feature-name {
  font-size: 26rpx;
  color: #333333;
  margin-top: 12rpx;
}

.feature-desc {
  font-size: 22rpx;
  color: #999999;
  margin-top: 4rpx;
}

/* 图片网格 */
.image-grid {
  display: flex;
  flex-direction: row;
  gap: 16rpx;
}

.image-item {
  flex: 1;
  align-items: center;
}

.demo-image {
  width: 100%;
  height: 160rpx;
  border-radius: 8rpx;
}

.image-label {
  font-size: 22rpx;
  color: #666666;
  margin-top: 8rpx;
}

/* 按钮样式 */
.button-group {
  margin-bottom: 20rpx;
  gap: 16rpx;
}

.button-row {
  flex-direction: row;
  gap: 16rpx;
}

/* 条件渲染演示 */
.condition-demo {
  gap: 16rpx;
}

.switch-row {
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.content-box {
  background-color: #E8F5E9;
  border-radius: 12rpx;
  padding: 24rpx;
  flex-direction: row;
  align-items: center;
  gap: 12rpx;
}

.content-box.hidden-box {
  background-color: #FFF3E0;
}

.content-text {
  font-size: 28rpx;
  color: #333333;
}

/* 列表演示 */
.list-demo {
  gap: 8rpx;
}

.list-item {
  flex-direction: row;
  align-items: center;
  padding: 16rpx;
  background-color: #F8F9FA;
  border-radius: 8rpx;
  gap: 12rpx;
}

.list-text {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.list-text.done {
  color: #999999;
}

.list-index {
  font-size: 24rpx;
  color: #999999;
  background-color: #E0E0E0;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

/* 进度条样式 */
.progress-list {
  gap: 20rpx;
}

.progress-item {
  gap: 8rpx;
}

.progress-label {
  font-size: 26rpx;
  color: #666666;
}

/* 开关列表 */
.switch-list {
  gap: 8rpx;
}

.switch-item {
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.switch-label {
  font-size: 28rpx;
  color: #333333;
}

/* 底部间距 */
.bottom-space {
  height: 120rpx;
}
