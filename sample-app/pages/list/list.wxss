.page {
  background-color: #F5F5F5;
  min-height: 100%;
}

/* 页面头部 */
.page-header {
  background-color: #667eea;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 8rpx;
}

.page-desc {
  font-size: 26rpx;
  color: #FFFFFF;
}

/* 通用 Section 样式 */
.section {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  margin: 0 20rpx 20rpx 20rpx;
  padding: 28rpx;
}

.section-header {
  flex-direction: row;
  align-items: center;
  margin-bottom: 24rpx;
  gap: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

/* 输入框样式 */
.input-group {
  gap: 16rpx;
}

.input-item {
  flex-direction: row;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.input-label {
  width: 140rpx;
  font-size: 28rpx;
  color: #333333;
}

.input-field {
  flex: 1;
  height: 72rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background-color: #F8F9FA;
  border-radius: 8rpx;
}

.input-disabled {
  background-color: #F0F0F0;
  color: #999999;
}

/* 复选框样式 */
.checkbox-group {
  gap: 8rpx;
}

.checkbox-item {
  flex-direction: row;
  align-items: center;
  padding: 16rpx 0;
  gap: 12rpx;
}

.checkbox-label {
  font-size: 28rpx;
  color: #333333;
}

.checkbox-label.disabled {
  color: #999999;
}

/* 单选框样式 */
.radio-group {
  gap: 8rpx;
}

.radio-item {
  flex-direction: row;
  align-items: center;
  padding: 16rpx 0;
  gap: 12rpx;
}

.radio-label {
  font-size: 28rpx;
  color: #333333;
}

.radio-label.disabled {
  color: #999999;
}

/* 滑块样式 */
.slider-group {
  gap: 24rpx;
}

.slider-item {
  gap: 12rpx;
}

.slider-label {
  font-size: 28rpx;
  color: #333333;
}

/* 底部间距 */
.bottom-space {
  height: 0;
}
