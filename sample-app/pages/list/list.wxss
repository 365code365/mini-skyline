/* 页面容器 */
.page {
  padding: 0;
  background-color: #f5f5f5;
}

/* 导航栏 */
.navbar {
  background-color: #07C160;
  padding: 40rpx 30rpx 20rpx;
}

.navbar-title {
  font-size: 36rpx;
  color: #ffffff;
}

/* 列表容器 */
.list-container {
  padding: 20rpx;
}

/* 列表项 */
.list-item {
  display: flex;
  flex-direction: row;
  gap: 20rpx;
  padding: 24rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.item-icon {
  border-radius: 8rpx;
  padding: 16rpx;
}

.icon-text {
  font-size: 28rpx;
  color: #ffffff;
}

.item-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item-title {
  font-size: 30rpx;
  color: #333333;
}

.item-desc {
  font-size: 24rpx;
  color: #999999;
}

.item-arrow {
  font-size: 28rpx;
  color: #cccccc;
}

/* 底部操作 */
.bottom-actions {
  padding: 30rpx;
}

.action-btn {
  background-color: #07C160;
  padding: 24rpx;
  border-radius: 8rpx;
}

.btn-text {
  font-size: 28rpx;
  color: #ffffff;
}

/* 背景色 */
.bg-blue {
  background-color: #007AFF;
}

.bg-green {
  background-color: #34C759;
}

.bg-orange {
  background-color: #FF9500;
}

.bg-purple {
  background-color: #AF52DE;
}

.bg-red {
  background-color: #FF3B30;
}
